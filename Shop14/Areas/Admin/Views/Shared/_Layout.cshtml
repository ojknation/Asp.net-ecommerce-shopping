<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Shop14</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <nav class="navbar fixed-top navbar-expand-sm navbar-light bg-light">
        <a class="navbar-brand" href="/admin/dashboard">Dashboard</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse justify-content-center" id="navbarNav">
            <ul class="navbar-nav">
                <li class="nav-item"><a href="/admin/pages" class="nav-link">Pages</a></li>
                <li class="nav-item"><a href="/admin/pages/EditSidebar" class="nav-link">Sidebar</a></li>
                <li class="nav-item"><a href="/admin/Shop/Categories" class="nav-link">Categories</a></li>
                <li class="nav-item"><a href="/admin/Shop/Products" class="nav-link">Products</a></li>



                @*<li class="nav-item active">
            <a href="@Url.Action("Index","Home")" class="nav-link">Home <span class="sr-only"(current)></span></a>
        </li>*@
                <li class="nav-item">
                    <a href="@Url.Action("About","Home")" class="nav-link" target="_blank">Shop14</a>
                </li>
            </ul>
        </div>
    </nav>
    <br />
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Shop14</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/scripts")
    @RenderSection("scripts", required: false)
</body>
</html>
